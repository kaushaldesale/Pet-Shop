<q></q>@model IEnumerable<Micraft_Solutions.Data_Context.Sp_m_Product_Report_Result>
 @{ 
     Layout = null;
 }
<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <a href="~/Views/Product/Product_Report.cshtml">~/Views/Product/Product_Report.cshtml</a>
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product Code</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Product Unit</th>
                    <th>Product Rate</th>
                    <th>Product Description</th>



                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.Hidden("Product_Id", item.Product_Id)
                        @Html.DisplayFor(modelItem => item.Product_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>

                    <td>
                        <img src="@Url.Content(item.Product_Image)" width="75" ,height="75" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Rate)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.Product_Description)
                    </td>

                    @*<td>
                        @Html.ActionLink("Edit", "Edit_Data", new { id = item.Product_Id }) |

                        @Html.ActionLink("Delete", "Delete_Data", new { id = item.Product_Id })
                    </td>*@
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Product Code</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Product Unit</th>
                    <th>Product Rate</th>
                    <th>Product Description</th>


                </tr>
            </tfoot>
        </table>
        @* <input type="button" class="btn btn-dark" value="Genrate Excel File" onclick="location.href='@Url.Action("GenrateExcelFile", "Student_Enquire")'" />*@
    </div>
</div>